@page "/orders/{Id}/edit"
@attribute [Authorize]
@inject OrderApiClient Api
@inject NavigationManager Nav

<h1>Edit order</h1>

@if (loading)
{
    <p>Loading...</p>
}
else if (model is null)
{
    <p>Order not found.</p>
}
else
{
    <EditForm Model="model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Title</label>
            <InputText class="form-control" @bind-Value="model.Title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <InputSelect class="form-select" @bind-Value="model.Status">
                @foreach (var status in Enum.GetValues<OrderStatus>())
                {
                    <option value="@status">@status</option>
                }
            </InputSelect>
        </div>

        <h4>Items</h4>
        @foreach (var item in model.Items)
        {
            <div class="card mb-2 p-3">
                <div class="row g-2">
                    <div class="col">
                        <InputText class="form-control" @bind-Value="item.Name" />
                    </div>
                    <div class="col">
                        <InputNumber class="form-control" @bind-Value="item.Quantity" />
                    </div>
                    <div class="col">
                        <InputNumber class="form-control" @bind-Value="item.Price" />
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-danger" type="button" @onclick="@(() => RemoveItem(item))">Remove</button>
                    </div>
                </div>
            </div>
        }

        <button class="btn btn-outline-secondary" type="button" @onclick="AddItem">Add item</button>

        <div class="mt-3">
            <button class="btn btn-primary" type="submit" disabled="@saving">Save</button>
            <button class="btn btn-link" type="button" @onclick='() => Nav.NavigateTo($"/orders/{Id}")'>Cancel</button>
        </div>

        @if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="alert alert-danger mt-2">@error</div>
        }
    </EditForm>
}

@code {
    [Parameter] public string Id { get; set; } = string.Empty;

    private UpdateOrderInput? model;
    private bool loading = true;
    private bool saving;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            var order = await Api.GetOrderAsync(Id);
            if (order is null)
            {
                return;
            }

            model = new UpdateOrderInput
            {
                Id = order.Id,
                Title = order.Title,
                Status = order.Status,
                Items = order.Items.Select(i => new UpdateOrderItemInput
                {
                    Id = i.Id,
                    Name = i.Name,
                    Quantity = i.Quantity,
                    Price = i.Price
                }).ToList()
            };
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private void AddItem()
    {
        model?.Items.Add(new UpdateOrderItemInput
        {
            Id = Guid.NewGuid().ToString(),
            Quantity = 1,
            Price = 10
        });
    }

    private void RemoveItem(UpdateOrderItemInput item)
    {
        model?.Items.Remove(item);
    }

    private async Task HandleSubmit()
    {
        if (model is null)
        {
            return;
        }

        saving = true;
        error = null;
        try
        {
            var updated = await Api.UpdateOrderAsync(model);
            if (updated is not null)
            {
                Nav.NavigateTo($"/orders/{Id}");
            }
            else
            {
                error = "Failed to update order.";
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            saving = false;
        }
    }
}
