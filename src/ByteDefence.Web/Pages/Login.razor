@page "/login"
@inject AuthService Auth
@inject CustomAuthStateProvider AuthState
@inject NavigationManager Nav

<h1>Login</h1>

<EditForm Model="model" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Username</label>
        <InputText class="form-control" @bind-Value="model.Username" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="model.Password" />
    </div>

    <button class="btn btn-primary" type="submit" disabled="@busy">Login</button>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger mt-2">@error</div>
    }
</EditForm>

@code {
    private LoginRequest model = new() { Username = "admin", Password = "admin123" };
    private bool busy;
    private string? error;

    private async Task HandleLogin()
    {
        busy = true;
        error = null;
        var success = await Auth.LoginAsync(model.Username, model.Password);
        if (success)
        {
            AuthState.NotifyUserChanged();
            Nav.NavigateTo("/orders", true);
        }
        else
        {
            error = "Invalid credentials";
        }

        busy = false;
    }
}
