@page "/orders/new"
@attribute [Authorize]
@inject OrderApiClient Api
@inject NavigationManager Nav

<h1>Create order</h1>

<EditForm Model="model" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <InputText class="form-control" @bind-Value="model.Title" />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <InputSelect class="form-select" @bind-Value="model.Status">
            @foreach (var status in Enum.GetValues<OrderStatus>())
            {
                <option value="@status">@status</option>
            }
        </InputSelect>
    </div>

    <h4>Items</h4>
    @foreach (var item in model.Items)
    {
        <div class="card mb-2 p-3">
            <div class="row g-2">
                <div class="col">
                    <InputText class="form-control" @bind-Value="item.Name" placeholder="Name" />
                </div>
                <div class="col">
                    <InputNumber class="form-control" @bind-Value="item.Quantity" />
                </div>
                <div class="col">
                    <InputNumber class="form-control" @bind-Value="item.Price" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-danger" type="button" @onclick="@(() => RemoveItem(item))">Remove</button>
                </div>
            </div>
        </div>
    }

    <button class="btn btn-outline-secondary" type="button" @onclick="AddItem">Add item</button>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit" disabled="@saving">Create</button>
        <button class="btn btn-link" type="button" @onclick='() => Nav.NavigateTo("/orders")'>Cancel</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger mt-2">@error</div>
    }
</EditForm>

@code {
    private CreateOrderInput model = new()
    {
        Items = new List<CreateOrderItemInput> { new() { Quantity = 1, Price = 100 } }
    };

    private bool saving;
    private string? error;

    private void AddItem()
    {
        model.Items.Add(new CreateOrderItemInput { Quantity = 1, Price = 10 });
    }

    private void RemoveItem(CreateOrderItemInput item)
    {
        model.Items.Remove(item);
    }

    private async Task HandleSubmit()
    {
        saving = true;
        error = null;
        try
        {
            var created = await Api.CreateOrderAsync(model);
            if (created is not null)
            {
                Nav.NavigateTo($"/orders/{created.Id}");
            }
            else
            {
                error = "Failed to create order.";
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            saving = false;
        }
    }
}
